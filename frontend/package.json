{
  "name": "aplose-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": ".",
  "proxy": "http://localhost:8000",
  "scripts": {
    "run:all": "concurrently --kill-others-on-fail \"npm run run:server\" \"npm run dev\"",
    "run:server": "cd .. && .\\venv\\Scripts\\activate && poetry run python .\\manage.py runserver",
    "dev": "vite",
    "wait:all": "wait-on http://localhost:8000/backend/admin && wait-on http://localhost:5173/app",
    "wait:server": "wait-on http://localhost:8000/backend/admin",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:playwright": "concurrently --kill-others \"npm run run:all\" \"npm run wait:server && npx playwright test -c ./playwright.config.ts ./tests/front\""
  },
  "dependencies": {
    "@ionic/react": "^7.6.2",
    "@reduxjs/toolkit": "^2.2.1",
    "bootstrap": "^5.3.2",
    "ionicons": "^7.2.2",
    "react-bootstrap": "^2.9.1",
    "react-confirm": "^0.3.0-7",
    "react-icons": "^5.3.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^5.3.4",
    "rxjs": "^7.8.1",
    "sass": "^1.77.8",
    "superagent": "^8.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.13",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/redux-mock-store": "^1.0.6",
    "@types/superagent": "^4.1.21",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "redux-mock-store": "^1.5.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^4.4.5",
    "wait-on": "^8.0.1"
  }
}
